<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.move.widgetdemo.MainAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="gotoIndicator"
            android:text="横线指示器" />

        <com.move.widget.XFlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            app:maxlines="2">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="hello"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="hello"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="hello"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="hello"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="hello"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="hello"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="hello"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="hello"
                android:textColor="#FFFFFF" />

        </com.move.widget.XFlowLayout>

        <com.move.widget.RelativeSizeTextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="hello"
            android:textSize="40sp"
            app:endText="world"
            app:end_proportion="1.5"
            app:start_end_text_color="#FF00FF"
            app:end_text_color="#0000FF"
            app:proportion="0.8"
            app:startText="hello" />

    </LinearLayout>


</ScrollView>
